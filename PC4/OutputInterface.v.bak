module OutputInterface(
	input InVal,
	output [7:0] Hex0,
	output [7:0] Hex1,
	output [7:0] Hex2,
	output [7:0] Hex3,
	output [7:0] Hex4,
	output [7:0] Hex5,
	output [7:0] Hex6,
	output [7:0] Hex7
);

wire [0:7] hexes [0:7] = {Hex0,Hex1,Hex2,Hex3,Hex4,Hex5,Hex6,Hex7};

genvar i;
generate
	for(i=0; i<8; i=i+1) begin : loop
		wire [3:0] hex_val = (InVal / 10**i) % 10;
		assign hexes[i]= (hex_val == 4'd0 ? 7'b0000001 : 
							 hex_val == 4'd1 ? 7'b1001111 :
							 hex_val == 4'd2 ? 7'b0010010 :
							 hex_val == 4'd3 ? 7'b0000110 :
							 hex_val == 4'd4 ? 7'b1001100 :
							 hex_val == 4'd5 ? 7'b0100100 :
							 hex_val == 4'd6 ? 7'b0100000 :
							 hex_val == 4'd7 ? 7'b0001111 :
							 hex_val == 4'd8 ? 7'b0000000 :
							 hex_val == 4'd9 ? 7'b0000100 :
							 7'b1111111);
	end
endgenerate
endmodule

